<p id="notice"><%= notice %></p>
<br>
<br>
<div class='jumbotron' align='center'>
<h1>Job Posts</h1></div>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Family name</th>
      <th>Headline</th>
      <th>Location</th>
      <th>Work Type</th>
      <th>Hiring date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_posts.each do |job_post| %>
      <tr>
        <td><%= job_post.family_name %></td>
        <td><%= job_post.headline %></td>
        <td><%= job_post.location %></td>
        <td><%= job_post.work_type %></td>
        <td><%= job_post.hiring_date %></td>
        <td><%= job_post.description %></td>
        <td><%= link_to 'Show', job_post %></td>
        <td><%= link_to 'Edit', edit_job_post_path(job_post) %></td>
        <td><%= link_to 'Destroy', job_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<br>
<br>
<div align='center'>
<%= link_to 'New Job Post', new_job_post_path %>
<br>
<br>
