<div class='jumbotron' align='center'>
<h1>Nannies</h1>
</div>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nannies.each do |nanny| %>
      <tr>
        <td><%= nanny.first_name %></td>
        <td><%= nanny.last_name %></td>
        <td><%= link_to 'View', nanny %></td>
        <td><%= link_to 'Edit', edit_nanny_path(nanny) %></td>
        <td><%= link_to 'Delete', nanny, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

